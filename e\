src/
├── api/                # Взаимодействие с бэкендом (даже если он моковый)
│   └── authService.js  # Имитация входа, регистрации и выхода
├── components/         # Переиспользуемые UI-компоненты
│   ├── AiChat/         # Панель чата с AI-агентом
│   ├── AuthForm/       # Формы входа и регистрации
│   ├── Note/           # Основная рабочая область (бывший ChatArea)
│   ├── ProtectedRoute/ # Защитник страниц (не пускает без логина)
│   └── Sidebar/        # Боковое меню навигации
├── context/            # Глобальное состояние приложения
│   ├── AuthContext.js  # Хранит юзера и токен
│   └── DashboardContext.js # Хранит выбранную задачу/документ
├── layouts/            # Обертки для страниц (каркасы)
│   └── DashboardLayout/# Сетка: Сайдбар слева + Контент справа
├── pages/              # Целые страницы (собираются из компонентов и лейаутов)
│   ├── AuthPage/       # Страница авторизации
│   └── DashboardPage/  # Главная страница приложения
├── App.js              # Главный файл, настройка маршрутов (роутинг)
└── index.js            # Точка входа React